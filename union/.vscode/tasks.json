{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build main",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/main.c",
                "-o",
                "${workspaceFolder}/main"
                // "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}